import * as React from 'react'
import { expect } from 'chai'
import { createRenderer } from 'react-addons-test-utils'

import <%= componentName %> from './src'

const theme = {
  root: 'root'
}

describe("<<%= componentName %> />", function () {
  it("should render with all optional parameters provided", function () {
    const renderer = createRenderer()
    renderer.render(
      <<%= componentName %>
        theme={theme}
      />
    )

    expect(renderer.getRenderOutput()).to.deep.eql(
      <div className={theme.root} />
    )
  })

  it("should render with no optional parameters provided", function () {
    const renderer = createRenderer()
    renderer.render(
      <<%= componentName %>
        theme={theme}
      />
    )

    expect(renderer.getRenderOutput()).to.deep.eql(
      <div className={theme.root} />
    )
  })
})
